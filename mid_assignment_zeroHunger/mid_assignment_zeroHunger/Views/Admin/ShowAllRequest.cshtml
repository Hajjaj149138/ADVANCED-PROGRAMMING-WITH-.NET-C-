@{
    ViewBag.Title = "ShowAllRequest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br /> <br /> <br /><br /><br />

<center>
    <h1>Show All The Request</h1> <br />

    <table class="table table-bordered">

        <tr>
            <th>Request ID</th>
            <th>restaurant Name</th>
            <th>Request Time</th>
            <th>Maximum Preservation Time</th>
            <th>Comments or Details</th>
            <th>Status</th>
            <th>Action</th>

        </tr>
        @foreach (var cr in Model)
        {
            <tr text-align: center;>
                <td>@cr.RequestID</td>
                <td>@cr.Restaurant.RestaurantName</td>
                <td>@cr.RequestTime</td>
                <td>@cr.MaxPreservationTime</td>
                <td>@cr.FoodDetails</td>
                <td>@cr.Status</td>
                <td> <a href="/Admin/AssignEmployee/@cr.RequestID" class="btn btn-primary">Accept Request</a> <a href="/Admin/RejectRequest/@cr.RequestID" class="btn btn-danger">Reject</a></td>

            </tr>
        }
    </table>
</center>