@{
    ViewBag.Title = "PendingRequest";
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

<style>
    body {
        background-color: lightgray;
    }

    center {
        margin-top: 50px;
    }

    h1 {
        color: darkblue;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    th {
        background-color: lightgray;
        color: darkblue;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .btn-danger {
        background-color: darkred;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 2px;
        cursor: pointer;
        border-radius: 3px;
    }

        .btn-danger:hover {
            background-color: red;
        }
</style>

<br />
<br />
<br />
<br />
<br />
<center>
    <h1>PendingRequest</h1>

    <table class="table table-bordered">
        <tr>
            <th>Request ID</th>
            <th>Request Time</th>
            <th>Max Preservation Time</th>
            <th>Food Details</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        @foreach (var cr in Model)
        {
            <tr>
                <td>@cr.RequestID</td>
                <td>@cr.RequestTime</td>
                <td>@cr.MaxPreservationTime</td>
                <td>@cr.FoodDetails</td>
                <td>@cr.Status</td>
                <td><a class="btn btn-danger" href="/restaurant/deleterequest/@cr.RequestID">Cancel</a></td>
            </tr>
        }
    </table>
</center>
