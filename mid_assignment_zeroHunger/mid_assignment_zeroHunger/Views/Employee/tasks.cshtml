@{
    ViewBag.Title = "Assignments";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<h1>Distributional Task</h1>
<table class="table table-bordered">
    <tr>
        <th>Restaurant Name</th>
        <th>Restaurant Location</th>
        <th>Requested At</th>
        <th>Assigned At</th>
        <th>Maximum Preservation Duration</th>
        <th>Restaurant's Contact Number</th>
        <th>Food Details</th>
        <th>Action</th>
    </tr>
    @foreach (var a in Model)
    {
        <tr text-align: center;>
            <td>@a.Request.Restaurant.RestaurantName</td>
            <td>@a.Request.Restaurant.RestaurantLocation</td>
            <td>@a.Request.RequestTime</td>
            <td>@a.AssignmentTime</td>
            <td>@a.Request.MaxPreservationTime</td>
            <td>@a.Request.Restaurant.RestaurantContactNumber</td>
            <td>@a.Request.FoodDetails</td>
            <td> <a href="/employee/Distributed/@a.AssignmentID" class="btn btn-primary">Click after your distribution is done.</a> </td>
        </tr>
    }
</table>
